<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/view_my_pairs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/requests_title"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:text="View My Pairs"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <ListView
        android:id="@+id/requestsList"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:layout_below="@+id/requests_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"/>

    <TextView
        android:id="@+id/requests_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:text="Requests"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <ListView
        android:id="@+id/suggestedList"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/suggested_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="-2dp" />

    <TextView
        android:id="@+id/suggested_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requestsList"
        android:layout_alignStart="@+id/requests_title"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:text="Pair Suggestions"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

</RelativeLayout>